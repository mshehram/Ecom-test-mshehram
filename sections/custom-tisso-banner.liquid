<section class="hero-banner">
  <div class="hero-banner__wrapper">
    <div class="hero-banner__desktop" style="background-image: url('{{ section.settings.desktop_bg_image | image_url: width: 2000 }}')">
      <div class="hero-banner__content--wraper" style="max-width: 1440px; margin:auto; width">
        <div class="hero-banner__content">
          <h1 class="hero-banner__heading">{{ section.settings.heading }}</h1>
          <p class="hero-banner__description">{{ section.settings.desktop_description }}</p>
          <a href="{{ section.settings.button_link | default: '#' }}" class="hero-banner__button">
            <div class="hero-banner__button-container" style="height: 50px;">
              <span class="hero-banner__button-text">{{ section.settings.button_text }}</span>
              <svg
                class="hero-banner__button-icon"
                width="26"
                height="12"
                viewBox="0 0 26 12"
                fill="none">
                <path d="M0.75 4.77298L7.37629e-08 4.77298L-7.37629e-08 6.27298L0.75 6.27298L0.75 4.77298ZM25.2803 6.05331C25.5732 5.76042 25.5732 5.28554 25.2803 4.99265L20.5074 0.21968C20.2145 -0.073213 19.7396 -0.0732131 19.4467 0.21968C19.1538 0.512574 19.1538 0.987447 19.4467 1.28034L23.6893 5.52298L19.4467 9.76562C19.1538 10.0585 19.1538 10.5334 19.4467 10.8263C19.7396 11.1192 20.2145 11.1192 20.5074 10.8263L25.2803 6.05331ZM0.75 6.27298L24.75 6.27298L24.75 4.77298L0.75 4.77298L0.75 6.27298Z" fill="white" />
              </svg>
            </div>
          </a>
        </div>
      </div>
    </div>

    <div class="hero-banner__mobile">
      <h1 class="hero-banner__heading hero-banner__heading--mobile">{{ section.settings.heading }}</h1>
      <p class="hero-banner__description hero-banner__description--mobile">{{ section.settings.mobile_description }}</p>
      <div class="hero-banner__mobile-image" style="background-image: url('{{ section.settings.mobile_bg_image | image_url: width: 800 }}')">
        <a href="{{ section.settings.button_link | default: '#' }}" class="hero-banner__button hero-banner__button--mobile">
          <div class="hero-banner__button-container">
            <span class="hero-banner__button-text">{{ section.settings.button_text }}</span>
            <svg
              class="hero-banner__button-icon"
              width="26"
              height="12"
              viewBox="0 0 26 12"
              fill="none">
              <path d="M0.75 4.77298L7.37629e-08 4.77298L-7.37629e-08 6.27298L0.75 6.27298L0.75 4.77298ZM25.2803 6.05331C25.5732 5.76042 25.5732 5.28554 25.2803 4.99265L20.5074 0.21968C20.2145 -0.073213 19.7396 -0.0732131 19.4467 0.21968C19.1538 0.512574 19.1538 0.987447 19.4467 1.28034L23.6893 5.52298L19.4467 9.76562C19.1538 10.0585 19.1538 10.5334 19.4467 10.8263C19.7396 11.1192 20.2145 11.1192 20.5074 10.8263L25.2803 6.05331ZM0.75 6.27298L24.75 6.27298L24.75 4.77298L0.75 4.77298L0.75 6.27298Z" fill="white" />
            </svg>
          </div>
        </a>
      </div>
    </div>
  </div>

  <div class="hero-banner__bottom-bar">
    <p class="hero-banner__bar-text hero-banner__bar-text--desktop">{{ section.settings.bottom_bar_desktop_text }}</p>
    <p class="hero-banner__bar-text hero-banner__bar-text--mobile">{{ section.settings.bottom_bar_mobile_text }}</p>
  </div>
</section>
<style>

  .hero-banner__button {
    position: relative;
    overflow: hidden;
    display: inline-block;
    min-width: 207px;
    min-height: 44px;
    background: black;
    text-decoration: none;
    color: white;
  }


  .hero-banner__button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: #FFF544;
    transition: left 0.3s ease;
    z-index: 1;
  }

  .hero-banner__button:hover::before {
    left: 0;
  }

  .hero-banner__button-container {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    min-height: 44px;
    width: 100%;
    height: 100%;
  }

  .hero-banner__button:hover .hero-banner__button-container {
    color: black;
  }

  .hero-banner__button:hover .hero-banner__button-icon path {
    fill: black;
    transition: fill 0.3s ease;
  }

  .hero-banner__button-text {
    font-family: 'Jost';
    font-size: 16px;
    text-transform: uppercase;
  }

  .hero-banner {
    width: 100%;
    overflow: hidden;
  }

  .hero-banner__bottom-bar {
    background-color: #F5F5F5;
    padding: 10px 50px;
    width: 100%;
    box-sizing: border-box;
    text-align: center;
  }

  .hero-banner__bar-text {
    margin: 0;
    font-family: 'Jost';
    font-weight: 400;
    color: #000;
  }

  .hero-banner__bar-text--desktop {
    font-size: 16px;
    line-height: 13.42px;
  }
  .hero-banner__content--wraper {
    max-width: 1440px;
    margin: auto;
    height: 100%;
    width: 100%;
    position: relative;
  }

  .hero-banner__bar-text--mobile {
    display: none;
    font-size: 14px;
  }

  .hero-banner__desktop {
    display: block;
    height: 780px;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    position: relative;
  }

  .hero-banner__content {
    position: absolute;
    left: 5%;
    bottom: 10%;
    max-width: 500px;
    padding: 20px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 8px;
  }

  .hero-banner__heading {
    font-size: 48px;
    font-weight: 700;
    font-family: 'Jost';
    margin-bottom: 20px;
    color: #000000;
  }

  .hero-banner__description {
    font-size: 17px;
    line-height: 1.6;
    font-family: 'Jost';
    margin-bottom: 30px;
    color: #333333;
    max-width: 440px;
  }
  .hero-banner__mobile {
    display: none;
  }
  @media screen and (max-width: 768px) {
    .hero-banner__desktop {
      display: none;
    }
    .hero-banner__mobile {
      display: block;
      margin-top: 50px;
    }

    .hero-banner__heading--mobile {
      font-size: 36px;
      margin-bottom: 20px;
      text-align: center;
      padding: 0 20px;
    }

    .hero-banner__description--mobile {
      font-size: 16px;
      line-height: 1.5;
      margin: 0 auto;
      text-align: center;
      padding: 0 20px;
    }

    .hero-banner__mobile-image {
      height: 264px;
      width: 100%;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      border-radius: 8px;
      position: relative;
      margin-top: 20px;
    }

    .hero-banner__button--mobile {
      position: absolute;
      bottom: 20px;
      left: 50%;
      transform: translateX(-50%);
      padding: 12px 30px;
      background-color: #000000;
      color: #ffffff;
      font-size: 14px;
      min-width: 193px;
    }

    .hero-banner__bottom-bar {
      padding: 10px 20px;
    }

    .hero-banner__bar-text--desktop {
      display: none;
    }

    .hero-banner__bar-text--mobile {
      display: block;
    }
  }

  @media screen and (min-width: 769px) and(max-width: 1024px) {
    .hero-banner__content {
      left: 3%;
      bottom: 5%;
      max-width: 400px;
    }

    .hero-banner__heading {
      font-size: 36px;
    }

    .hero-banner__bottom-bar {
      padding: 10px 30px;
    }
  }
</style>

