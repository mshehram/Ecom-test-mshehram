<script>
  /**
   * GLOBAL STATE MANAGEMENT
   * Maintains the state of the Quick View modal, including selections and product data.
   */
  const quickViewState = {
    selectedVariantId: null,
      productVariants: [],
      currentSelectedColor: null,
      currentSelectedSize: null,
      isAdding: false,
      currencyCode: '{{ shop.currency }}' || 'CAD'
    };
  
  // PRICE FORMATE
  function formatCurrency(cents) {
      const amount = (cents / 100).toFixed(2);
      // Custom string to ensure format is "Price CurrencySymbol"
      return `${amount} ${quickViewState.currencyCode}$`;
    }
  /**
   * OPEN QUICK VIEW MODAL
   * Fetches product data via Shopify Ajax API and populates the modal UI.
   */
  async function openQuickView(handle) {
    const overlay = document.getElementById('product-popup-overlay');
    const elements = { 
      title: document.getElementById('popup-product-title'), 
      info: document.getElementById('popup-metafield-info'),  
      colors: document.getElementById('popup-color-options'),
      sizes: document.getElementById('popup-size-options'),
        price: document.getElementById('popup-product-price'),
        image: document.getElementById('popup-main-image'),
        sizeText: document.getElementById('selected-size-text'),
        addToCartBtn: document.querySelector('.add-to-cart-button')
      };
  
      overlay.classList.add('active');
    document.body.style.overflow = 'hidden';
      Object.assign(quickViewState, { selectedVariantId: null, currentSelectedColor: null, currentSelectedSize: null });
           elements.title.innerText = 'Loading...';
      elements.info.innerHTML = 'Fetching details...';
      elements.colors.innerHTML = '';
      elements.sizes.innerHTML = '';
      elements.sizeText.innerText = 'Choose your size';
      if(elements.addToCartBtn) {
        elements.addToCartBtn.innerText = "Add to Cart";
        elements.addToCartBtn.disabled = false;
      }
      try {
        const response = await fetch(`/products/${handle}.js`);
        const product = await response.json();
           quickViewState.productVariants = product.variants;
            elements.image.src = product.featured_image;
      elements.title.innerText = product.title;
      elements.info.innerHTML = product.description;
      // Display initial price
  
      elements.price.innerText = formatCurrency(product.price);
           product.options.forEach(option => {
          const name = option.name.toLowerCase();
        
          if (name.includes('color')) {
            elements.colors.innerHTML = option.values.map(value => `
              <div class="color-box" onclick="selectColor('${value}', this)">
                <div class="color-indicator-left" style="background: ${value.toLowerCase()};"></div>
                <span class="color-text">${value}</span>
              </div>`).join('');
          }
   
         if (name === 'size') {
            elements.sizes.innerHTML = option.values.map(value => `
              <div class="size-option" onclick="selectSize('${value}', event)">${value}</div>`).join('');
          }
        });
      } catch (error) {
        console.error("QuickView Error:", error);
        elements.title.innerText = "Error loading product";
      }
    }
   
    /**
     * SELECTION HANDLERS
     */
    function selectColor(value, element) {
      quickViewState.currentSelectedColor = value;
      document.querySelectorAll('.color-box').forEach(el => el.classList.remove('selected'));
      element.classList.add('selected');
      findVariant();
    }
     
  function selectSize(value, event) {
      event.stopPropagation();
      quickViewState.currentSelectedSize = value;
      document.getElementById('selected-size-text').innerText = value;
      document.querySelector('.size-dropdown-box').classList.remove('active');
      findVariant();
    }
  
   /**
     * VARIANT MATCHING & AVAILABILITY CHECK
     * Updated to check if the variant is in stock.
     */
    function findVariant() {
      const { currentSelectedColor: color, currentSelectedSize: size, productVariants } = quickViewState;
      const btn = document.querySelector('.add-to-cart-button');
      const priceEl = document.getElementById('popup-product-price');
          const match = productVariants.find(v => 
        (!color || v.options.includes(color)) && 
        (!size || v.options.includes(size))
      );
   if (match) {
        quickViewState.selectedVariantId = match.id;
        priceEl.innerText = formatCurrency(match.price); // Update price based on variant
       
        // Check if variant is available (In Stock)
        if (match.available) {
          btn.innerText = "Add to Cart";
          btn.disabled = false;
          btn.style.opacity = "1";
        } else {
          btn.innerText = "Out of Stock";
          btn.disabled = true;
          btn.style.opacity = "0.5";
        }
      } else {
        quickViewState.selectedVariantId = null;
        if(btn) {
          btn.innerText = "Unavailable";
          btn.disabled = true;
        }
      }
    }
   
    /**
     * ADD TO CART LOGIC
     */
    async function addToCart() {
      const { currentSelectedColor, currentSelectedSize, selectedVariantId, isAdding } = quickViewState;
         if (isAdding) return; 
      if (!currentSelectedColor || !currentSelectedSize) return alert("Please select both color and size!");
      if (!selectedVariantId) return alert("Selected combination is not available!");
        setBtnLoading(true);
        try {
        let itemsToAdd = [{ id: selectedVariantId, quantity: 1 }];
      if (currentSelectedColor.toLowerCase() === 'black' && ['m', 'medium'].includes(currentSelectedSize.toLowerCase())) {
          const upsellRes = await fetch('/products/dark-winter-jacket.js');
         const upsellProd = await upsellRes.json();
          if (upsellProd.variants.length > 0) itemsToAdd.push({ id: upsellProd.variants[0].id, quantity: 1 });
        }
      const cartRes = await fetch('/cart/add.js', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ items: itemsToAdd })
        });
          if (cartRes.ok) window.location.href = '/cart';
      } catch (err) {
        console.error("Cart API Error:", err);
        setBtnLoading(false);
      }
    }
  
    /**
     * UI UTILITIES
     */
    function setBtnLoading(loading) {
      quickViewState.isAdding = loading;
      const btn = document.querySelector('.add-to-cart-button');
      if (btn && !btn.disabled) {
          btn.innerText = loading ? "Adding..." : "Add to Cart";
          btn.style.opacity = loading ? "0.7" : "1";
      }
    }
       function toggleSizeDropdown(event) {
      event.stopPropagation();
      document.querySelector('.size-dropdown-box').classList.toggle('active');
    }
     function closeQuickView() {
      document.getElementById('product-popup-overlay').classList.remove('active');
      document.body.style.overflow = 'auto';
    }  
  window.addEventListener('click', (e) => {
      if (e.target.id === 'product-popup-overlay') closeQuickView();
      const dropdown = document.querySelector('.size-dropdown-box');
      if (dropdown && !e.target.closest('.size-dropdown-container')) {
          dropdown.classList.remove('active');
      }
    });
</script>

