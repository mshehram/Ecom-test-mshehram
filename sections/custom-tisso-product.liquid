<style>
  /* --- Base Styles --- */
  .tisso-grid-section {
    width: 100%;
    background-color: #ffffff;
    padding: 56px 16.72px 23.74px;
    position: relative;
    font-family: 'Jost'
    , sans-serif;
  }

  .font-lustria {
    font-family: 'Lustria';
  }

  .font-jost {
    font-family: 'Jost'
    , sans-serif;
  }

  .tisso-wrapper {
    margin: 0 auto;
    max-width: 1440px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 30px;
  }

  /* --- Heading --- */
  .tisso-heading {
    width: 100%;
    margin: 0;
    font-weight: 400;
    font-size: 24px;
    line-height: 1.2;
    color: #000000;
    text-align: center;
  }

  /* --- Product Grid --- */
  .tisso-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    justify-content: flex-start;
    width: 100%;
    margin: 0 auto;
  }

  .tisso-product-card {
    position: relative;
    flex: 0 0 calc(50% - 2px);
    overflow: hidden;
    aspect-ratio: 169 / 186;
  }

  .tisso-product-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* --- Interactive Plus Icon --- */
  .plus-icon-trigger {
    position: absolute;
    cursor: pointer;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 15.71px;
    height: 15.71px;
    /* transition: transform 0.2s ease; */
  }

  .plus-icon-trigger svg {
    width: 100%;
    height: 100%;
    display: block;
  }

  /* --- Media Queries */
  @media (max-width: 767px) {
    .plus-icon-trigger {
      top: var(--top-m) !important;
      left: var(--left-m) !important;
      right: auto !important;
      transform: none !important;
    }

  }

  @media (min-width: 1024px) {
    .tisso-grid-section {
      padding: 68px 49.5px 51.5px 51.5px;
    }

    .tisso-heading {
      text-align: left;
      font-size: 36px;
    }

    .tisso-grid {
      gap: 20px;
    }

    .tisso-product-card {
      flex: 1 1 calc(33.333% - 14px);
      min-width: 300px;
      height: 444px;
      aspect-ratio: auto;
    }

    .plus-icon-trigger {
      top: var(--top-d) !important;
      left: var(--left-d) !important;
      width: 22px;
      height: 22px;
    }

    .plus-icon-trigger:hover {
      transform: scale(1.2);
    }

  }

  /* --- Quick View Modal Overlay --- */
  #product-popup-overlay {
    position: fixed;
    inset: 0;
    z-index: 100;
    background-color: rgba(0, 0, 0, 0.1);
    display: none;
    align-items: center;
    justify-content: center;
  }

  #product-popup-overlay.active {
    display: flex;

  }

  .popup-modal {
    background-color: #ffffff;
    width: 311px;
    height: 447px;
    box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.20);
    position: relative;
    overflow: hidden;
  }

  .popup-close {
    position: absolute;
    top: 12px;
    right: 12px;
    z-index: 50;
    background: none;
    border: none;
    cursor: pointer;
  }

  .popup-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 310px;
    height: 450px;
  }

  /* --- Modal Product Details --- */
  #popup-main-image {
    position: absolute;
    width: 120px;
    height: 140px;
    object-fit: cover;
    top: 36.42px;
    left: 17px;
  }

  #popup-product-title {
    position: absolute;
    top: 39px;
    left: 145px;
    width: 136px;
    height: 38px;
    font-size: 16px;
    font-weight: 300;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  #popup-product-price {
    position: absolute;
    top: 88px;
    left: 145px;
    font-size: 16px;
    margin: 0;
  }

  #popup-metafield-info {
    position: absolute;
    top: 119px;
    left: 145px;
    width: 146px;
    font-size: 14px;
    font-weight: 300;
    line-height: 1.1;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
  }

  /* --- Variant Selectors --- */
  .variant-selection-wrapper {
    position: absolute;
    top: 186px;
    left: 20px;
    width: 271px;
  }

  .option-title {
    font-family: 'Jost'
    , sans-serif;
    font-size: 14px;
    font-weight: 400;
    color: #333333;
    margin: 0 0 6px;
  }

  .color-options-row {
    display: flex;
    width: 271px;
    height: 40.44px;
    border: 0.5px solid #000000;
    box-sizing: border-box;
    align-items: center;
    overflow: hidden;
    background: #FFFFFF;
  }

  .color-box {
    flex: 1;
    display: flex;
    align-items: center;
    height: 100%;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .color-box.selected {
    background-color: rgba(0, 0, 0, 1) !important;
  }

  .color-box.selected .color-text {
    color: #ffffff !important;
  }

  .color-indicator-left {
    width: 5.81px;
    height: 40.44px;
    border: 0.5px solid #000000;
    box-sizing: border-box;
    flex-shrink: 0;
  }

  .color-text {
    font-family: 'Jost'
    , sans-serif;
    font-size: 18px;
    font-weight: 400;
    line-height: 100%;
    letter-spacing: -0.02em;
    text-transform: capitalize;
    padding-left: 15px;
    color: #000000;
    display: flex;
    align-items: center;
  }

  /* --- Dropdown Styles --- */
  .size-dropdown-box {
    width: 271px;
    height: 40.44px;
    border: 1px solid #000000;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    margin-top: 6px;
    cursor: pointer;
    background: #FFFFFF;
    position: relative;
  }
  .dropdown-text {
    flex: 1;
    font-family: 'Jost'
    , sans-serif;
    font-size: 16px;
    font-weight: 400;
    padding-left: 15px;
  }

  .size-dropdown-divider {
    width: 0.5px;
    height: 40.44px;
    background-color: #000000;
  }

  .dropdown-icon {
    width: 39.73px;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .size-options-list {
    position: absolute;
    top: 38px;
    left: -1px;
    height: 80px;
    width: 271px;
    background: #ffffff;
    border: 1px solid #000000;
    z-index: 1000;
    display: none;
    overflow-y: scroll;
    scrollbar-width: none;
  }

  .size-option {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 40px;
    font-family: 'Jost'
    , sans-serif;
    font-size: 16px;
    cursor: pointer;
  }

  .size-option:hover {
    background-color: #000000 !important;
    color: #ffffff !important;
  }

  .size-dropdown-box.active .size-options-list {
    display: block;
  }
  .size-dropdown-box.active .dropdown-icon svg {
    transform: rotate(180deg);
  }

  /* --- Add to Cart Button --- */
  .add-to-cart-btn {
    position: absolute;
    bottom: 25px;
    left: 20px;
    min-height: 45px;
    min-width: 271px;
    background-color: #000;
    color: #fff;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 30px;
  }

  .add-to-cart-btn p {
    text-transform: uppercase;
    font-size: 16px;
    margin: 0;
  }

</style>


<section class="tisso-grid-section">

  <div class="tisso-container">

    <div class="tisso-wrapper">

      {%- if section.settings.heading != blank -%}

        <h2 class="tisso-heading font-lustria">{{ section.settings.heading | escape }}</h2>

      {%- endif -%}


